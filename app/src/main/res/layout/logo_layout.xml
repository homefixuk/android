<?xml version="1.0" encoding="utf-8"?>
<com.samdroid.andifirebase.view.AndiLogoView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/logo_holder"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.samdroid.view.WidthFitImageView
        android:id="@+id/logo_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_homefix_logo" />

    <com.samdroid.andifirebase.view.AndiTextView
        android:id="@+id/name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo_img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/base_padding_triple"
        android:text="HomeFix"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/text_size_extra_large" />

</com.samdroid.andifirebase.view.AndiLogoView>