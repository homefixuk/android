<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.alamkanak.weekview.WeekView
        android:id="@+id/week_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:columnGap="8dp"
        app:dayBackgroundColor="@color/greyLight"
        app:eventTextColor="@color/colorPrimaryDark"
        app:headerColumnBackground="@color/colorPrimaryDark"
        app:headerColumnPadding="8dp"
        app:headerColumnTextColor="@color/colorPrimary"
        app:headerRowBackgroundColor="@color/grey"
        app:headerRowPadding="12dp"
        app:hourHeight="60dp"
        app:noOfVisibleDays="3"
        app:textSize="12sp"
        app:todayBackgroundColor="@color/black_10_percent" />

    <View
        android:id="@+id/cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_60_percent"
        android:visibility="gone" />

    <com.github.sundeepk.compactcalendarview.CompactCalendarView
        android:id="@+id/compactcalendar_view"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:visibility="gone"
        app:compactCalendarBackgroundColor="#64C6F3"
        app:compactCalendarCurrentDayBackgroundColor="#E6979797"
        app:compactCalendarCurrentSelectedDayBackgroundColor="#284f61"
        app:compactCalendarMultiEventIndicatorColor="#ffffff"
        app:compactCalendarTargetHeight="250dp"
        app:compactCalendarTextColor="#ffffff"
        app:compactCalendarTextSize="12sp" />

</RelativeLayout>
