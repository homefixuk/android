<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shadow_box_white_rounded_bordered"
    android:orientation="vertical">

    <TextView
        android:id="@+id/service_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/base_padding_half"
        android:textAppearance="@style/TextTheme.Bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginEnd="1px"
        android:layout_marginStart="1px"
        android:background="@color/light_grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:paddingEnd="@dimen/base_padding_half"
        android:paddingStart="@dimen/base_padding_half">

        <RelativeLayout
            android:id="@+id/start_time_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/base_padding_half">

            <TextView
                android:id="@+id/start_date_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/icon"
                android:layout_toStartOf="@+id/duration"
                android:gravity="start|center_vertical"
                android:paddingEnd="@dimen/base_padding_half"
                android:paddingStart="@dimen/base_padding_half"
                android:textAppearance="@style/TextTheme.Small" />

            <TextView
                android:id="@+id/duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/start_date_time"
                android:layout_alignParentEnd="true"
                android:gravity="end|center_vertical"
                android:textAppearance="@style/TextTheme.Small" />

            <ImageView
                android:id="@+id/icon"
                android:layout_width="@dimen/base_padding_double"
                android:layout_height="@dimen/base_padding_double"
                android:layout_alignBottom="@+id/start_date_time"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignTop="@+id/start_date_time"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_av_timer_grey600_48dp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/light_grey" />

        <RelativeLayout
            android:id="@+id/location_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/transparent_to_accent_color_selector"
            android:paddingEnd="@dimen/base_padding_half"
            android:paddingStart="@dimen/base_padding_half">

            <ImageView
                android:id="@+id/location_icon"
                android:layout_width="@dimen/base_padding_double"
                android:layout_height="@dimen/base_padding_double"
                android:layout_alignBottom="@+id/location_txt"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignTop="@+id/location_txt"
                android:scaleType="fitCenter"
                android:src="@drawable/directions" />

            <TextView
                android:id="@+id/location_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/location_icon"
                android:background="@drawable/transparent_to_accent_color_selector"
                android:gravity="start|top"
                android:padding="@dimen/base_padding_half"
                android:textAppearance="@style/TextTheme.Small" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/light_grey" />

        <RelativeLayout
            android:id="@+id/person_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/base_padding_half"
            android:paddingStart="@dimen/base_padding_half">

            <ImageView
                android:id="@+id/person_icon"
                android:layout_width="@dimen/base_padding_double"
                android:layout_height="@dimen/base_padding_double"
                android:layout_alignBottom="@+id/person_name_txt"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignTop="@+id/person_name_txt"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_account_grey600_48dp" />

            <TextView
                android:id="@+id/person_name_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/person_icon"
                android:background="@android:color/transparent"
                android:gravity="start|top"
                android:padding="@dimen/base_padding_half"
                android:textAppearance="@style/TextTheme.Small" />

            <TextView
                android:id="@+id/person_email_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/person_name_txt"
                android:layout_below="@+id/person_name_txt"
                android:background="@drawable/transparent_to_accent_color_selector"
                android:gravity="start|top"
                android:padding="@dimen/base_padding_half"
                android:textAppearance="@style/TextTheme.Small" />

            <ImageView
                android:id="@+id/email_icon"
                android:layout_width="@dimen/base_padding_double"
                android:layout_height="@dimen/base_padding_double"
                android:layout_alignBottom="@+id/person_email_txt"
                android:layout_alignEnd="@+id/person_icon"
                android:layout_alignStart="@+id/person_icon"
                android:layout_alignTop="@+id/person_email_txt"
                android:scaleType="fitCenter"
                android:src="@drawable/email" />

            <TextView
                android:id="@+id/person_phone_number_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/person_email_txt"
                android:layout_below="@+id/person_email_txt"
                android:background="@drawable/transparent_to_accent_color_selector"
                android:gravity="start|top"
                android:padding="@dimen/base_padding_half"
                android:textAppearance="@style/TextTheme.Small" />

            <ImageView
                android:id="@+id/phone_icon"
                android:layout_width="@dimen/base_padding_double"
                android:layout_height="@dimen/base_padding_double"
                android:layout_alignBottom="@+id/person_phone_number_txt"
                android:layout_alignEnd="@+id/email_icon"
                android:layout_alignStart="@+id/email_icon"
                android:layout_alignTop="@+id/person_phone_number_txt"
                android:scaleType="fitCenter"
                android:src="@drawable/phone" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>