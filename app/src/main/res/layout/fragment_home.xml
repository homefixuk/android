<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:res="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/current_job_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/base_padding"
            android:gravity="center"
            android:paddingEnd="@dimen/base_padding"
            android:paddingStart="@dimen/base_padding"
            android:text="@string/current_job"
            android:textAppearance="@style/TextTheme.Small.Bold.Grey" />

        <include
            android:id="@+id/current_job_layout"
            layout="@layout/own_job_summary_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/next_job_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/base_padding_double"
            android:gravity="center"
            android:paddingEnd="@dimen/base_padding"
            android:paddingStart="@dimen/base_padding"
            android:text="@string/next_job"
            android:textAppearance="@style/TextTheme.Small.Bold.Grey" />

        <include
            android:id="@+id/next_job_layout"
            layout="@layout/own_job_summary_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/quick_actions_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/base_padding_double"
            android:gravity="center"
            android:paddingEnd="@dimen/base_padding"
            android:paddingStart="@dimen/base_padding"
            android:text="@string/quick_actions"
            android:textAppearance="@style/TextTheme.Small.Bold.Grey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/base_padding"
            android:paddingEnd="@dimen/base_padding_five"
            android:paddingStart="@dimen/base_padding_five"
            android:paddingTop="@dimen/base_padding">

            <TextView
                android:id="@+id/add_availability_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/primary_to_dark_color_selector"
                android:gravity="center"
                android:padding="@dimen/base_padding"
                android:text="@string/add_availability"
                android:textAllCaps="true"
                android:textAppearance="@style/TextTheme.White.Bold" />

            <TextView
                android:id="@+id/add_own_job_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/base_padding"
                android:background="@drawable/primary_to_dark_color_selector"
                android:gravity="center"
                android:padding="@dimen/base_padding"
                android:text="@string/add_own_job"
                android:textAllCaps="true"
                android:textAppearance="@style/TextTheme.White.Bold" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_padding_double" />

    </LinearLayout>
</ScrollView>
