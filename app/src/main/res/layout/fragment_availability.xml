<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical"
    android:theme="@style/AppTheme">

    <RelativeLayout
        android:id="@+id/start_time_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:padding="@dimen/base_padding">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/base_padding_triple"
            android:layout_alignBottom="@+id/start_date"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignTop="@+id/start_date"
            android:scaleType="fitXY"
            android:src="@drawable/ic_av_timer_grey600_48dp" />

        <TextView
            android:id="@+id/start_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/icon"
            android:layout_toRightOf="@+id/icon"
            android:gravity="start|center_vertical"
            android:padding="@dimen/base_padding"
            android:textAppearance="@style/TextTheme.Large" />

        <TextView
            android:id="@+id/start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/start_date"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:gravity="end|center_vertical"
            android:textAppearance="@style/TextTheme.Large" />

        <TextView
            android:id="@+id/end_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/start_date"
            android:layout_alignStart="@+id/start_date"
            android:layout_below="@+id/start_date"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/base_padding"
            android:gravity="start|center_vertical"
            android:padding="@dimen/base_padding"
            android:textAppearance="@style/TextTheme.Large" />

        <TextView
            android:id="@+id/end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/end_date"
            android:layout_alignLeft="@+id/start_time"
            android:layout_alignStart="@+id/start_time"
            android:layout_below="@+id/start_time"
            android:layout_centerVertical="true"
            android:gravity="end|center_vertical"
            android:textAppearance="@style/TextTheme.Large" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/start_time_bar"
        android:layout_marginTop="@dimen/base_padding_half"
        android:background="@color/light_grey" />

    <TextView
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/base_padding"
        android:background="@drawable/primary_to_dark_color_selector"
        android:paddingBottom="@dimen/base_padding"
        android:paddingEnd="@dimen/base_padding_quad"
        android:paddingLeft="@dimen/base_padding_quad"
        android:paddingRight="@dimen/base_padding_quad"
        android:paddingStart="@dimen/base_padding_quad"
        android:paddingTop="@dimen/base_padding"
        android:textAppearance="@style/TextTheme.White.Caps.Large.Bold" />

</RelativeLayout>
