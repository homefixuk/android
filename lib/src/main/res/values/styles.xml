    </style>

    <style name="TextTheme.Edit.Grey" parent="@style/TextTheme.Edit">
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="TextTheme.Bold" parent="@style/TextTheme">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextTheme.Caps" parent="@style/TextTheme">
        <item name="android:inputType">textCapWords</item>
    </style>

    <style name="TextTheme.White.Bold" parent="@style/TextTheme.White">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SingleLineTheme.DarkGrey.ExtraLarge" parent="@style/SingleLineTheme.DarkGrey">
        <item name="android:textSize">@dimen/text_size_extra_large</item>
    </style>

    <style name="SingleLineTheme.White.Caps" parent="@style/SingleLineTheme.White">
        <item name="android:inputType">textCapWords</item>
    </style>

    <style name="SingleLineTheme.White.Large" parent="@style/SingleLineTheme.White">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="SingleLineActionBarTheme" parent="@style/SingleLineTheme.White">
        <item name="android:textSize">@dimen/text_size_extra_large</item>
    </style>

    <style name="SingleLineActionBarTheme.Bold" parent="@style/SingleLineActionBarTheme">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SingleLineActionBarTheme.Light" parent="@style/SingleLineActionBarTheme">
        <item name="android:textColor">@color/white_50_percent</item>
    </style>

    <style name="TextTheme.White.Caps.Large" parent="@style/SingleLineTheme.White.Caps">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="TextTheme.White.Caps.Large.Bold" parent="@style/TextTheme.White.Caps.Large">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SingleLineTheme.White.ExtraLarge" parent="@style/SingleLineTheme.White">
        <item name="android:textSize">@dimen/text_size_extra_large</item>
    </style>

    <style name="CustomProgressBarHorizontal" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:minHeight">2dp</item>
        <item name="android:maxHeight">2dp</item>
        <item name="android:height">2dp</item>
    </style>

